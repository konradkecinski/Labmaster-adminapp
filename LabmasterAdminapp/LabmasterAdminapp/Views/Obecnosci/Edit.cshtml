@model LabmasterAdminapp.Models.Obecnosci

@{
    ViewBag.Title = "Edytuj obecność";
}

<h2>Edytuj</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Obecność</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.id_studenta, "Student", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
        <div class="col-md-10">
            @Html.DropDownList("id_studenta", null, htmlAttributes: new { @class = "form-control", @style = "display:none" })
            @Html.ValidationMessageFor(model => model.id_studenta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.id_zajec, "id_zajec", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
        <div class="col-md-10">
            @Html.DropDownList("id_zajec", null, htmlAttributes: new { @class = "form-control", @style = "display:none" })
            @Html.ValidationMessageFor(model => model.id_zajec, "", new { @class = "text-danger" })
        </div>
    </div>
    <dl class="dl-horizontal">
        <dt>
            Imie Studenta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Studenci.imie)
        </dd>
        <dt>
            Nazwisko studenta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Studenci.nazwisko)
        </dd>
        <dt>
            Indeks Studenta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Studenci.indeks)
        </dd>
        <dt>
            Data zajęć
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Zajecia.rozpoczecie)
        </dd>
        <dt>
            Przedmiot
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Zajecia.Przedmioty.nazwa)
        </dd>
    </dl>

        <div class="form-group">
            @Html.LabelFor(model => model.obecnosc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.obecnosc)
                    @Html.ValidationMessageFor(model => model.obecnosc, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usprawiedliwienie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.usprawiedliwienie)
                    @Html.ValidationMessageFor(model => model.usprawiedliwienie, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
</div>
}

<div>
    @Html.ActionLink("Wróć", null, null, null, new { href = Request.UrlReferrer })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
